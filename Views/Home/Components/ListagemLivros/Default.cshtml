@model IEnumerable<BibliotecaMVC.Models.Livro>

@{
    Layout = null;
}

<div class="row livros-home">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <img class="card-img-top" src="~/@item.Foto">
                <div class="card-block">
                    <h4 class="card-title">@item.Titulo</h4>
                    <p class="card-text">
                        Quant. <strong>@item.Quantidade</strong>
                    </p>
                    <a asp-area="" asp-controller="Carrinho" asp-action="Adicionar" 
                       asp-route-id="@item.LivroID" class="btn btn-primary">
                        <i class="fa fa-shopping-bag" aria-hidden="true"></i>&emsp;Adic. Carrinho
                    </a>
                </div>
            </div>
        </div>
    }
</div>
