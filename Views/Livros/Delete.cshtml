@model BibliotecaMVC.Models.Livro

@{
    ViewData["Title"] = "Excluir Livro";
}

<h2 class="tit-pagina tit-excluir">
    <i class="fa fa-trash-o" aria-hidden="true"></i>&ensp;Excluir Livro
</h2>

<p class="aviso-excluir">Tem certeza de que deseja <span>excluir</span> este livro?</p>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd>
            <img class="foto" src="~/@Model.Foto" />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <p class="acoes-base clearfix">
            <a asp-action="Index" class="btn btn-primary pull-left">
                <i class="fa fa-list" aria-hidden="true"></i>
                &ensp;Voltar para Lista
            </a>
            <button type="submit" value="Delete" class="btn btn-danger" />
                <i class="fa fa-trash-o" aria-hidden="true"></i>
                &ensp;Excluir Livro
            </button>
        </p>
    </form>
</div>
