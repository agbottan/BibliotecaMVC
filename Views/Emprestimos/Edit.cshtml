@model BibliotecaMVC.Models.Emprestimo

@{
    ViewData["Title"] = "Editar Empréstimo";
}

<h2 class="tit-pagina">
    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>&ensp;Editar Empréstimo
</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="EmprestimoID" />
        <div class="form-group">
            <label asp-for="DataDevolucao" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DataDevolucao" class="form-control" />
                <span asp-validation-for="DataDevolucao" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DataFim" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DataInicio" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UsuarioID" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="UsuarioID" class="form-control" asp-items="ViewBag.UsuarioID"></select>
                <span asp-validation-for="UsuarioID" class="text-danger" />
            </div>
        </div>
    </div>
    <p class="acoes-base clearfix">
        <a asp-action="Index" class="btn btn-primary pull-left">
            <i class="fa fa-list" aria-hidden="true"></i>
            &ensp;Voltar para Lista
        </a>
        <button type="submit" value="Save" class="btn btn-success" />
            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
            &ensp;Salvar Alterações
        </button>
    </p>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
